
<%= form_with model: material_purchase, local: true do |form| %>

  <div>
    <%= form.label :item, "Наименование" %><br>
    <%= form.text_field :item %>
  </div>

  <div>
    <%= form.label :date, "Дата" %><br>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :quantity, "Количество" %><br>
    <%= form.number_field :quantity %>
  </div>

  <div>
    <%= form.label :unit_price, "Цена за единицу" %><br>
    <%= form.number_field :unit_price, step: 0.01 %>
  </div>
<% if material_purchase.errors.any? %>
  <div class="errors">
    <h4>Ошибки:</h4>
    <ul>
      <% material_purchase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= form.submit "Сохранить" %>
  </div>
<% end %>
<%= link_to "Назад", material_purchases_path %>
